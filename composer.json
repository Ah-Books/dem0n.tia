{
  "name": "phalcon/forum",
  "description": "Open-sourced engine for building flexible, clear and fast forums.",
  "type": "project",
  "license": "BSD-3-Clause",
  "homepage": "https://forum.phalconphp.com/",

  "keywords": [
    "forum",
    "phalcon",
    "discussion",
    "question",
    "answer",
    "qa"
  ],

  "authors": [
    {
      "name": "Phalcon Team",
      "email": "team@phalconphp.com",
      "homepage": "https://phalconphp.com/en/team"
    },
    {
      "name": "Contributors",
      "homepage": "https://github.com/phalcon/forum/graphs/contributors"
    }
  ],

  "support": {
    "source": "https://github.com/phalcon/forum",
    "issues": "https://github.com/phalcon/forum/issues",
    "wiki": "https://github.com/phalcon/forum/wiki",
    "forum": "https://forum.phalconphp.com"
  },

  "require": {
    "php": ">= 7.1",
    "ext-curl": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-phalcon": "~3.2",
    "google/recaptcha": "1.1.*",
    "league/flysystem": "1.0.*",
    "pagerfanta/pagerfanta": "2.0.*",
    "phalcon/breadcrumbs": "1.4.*",
    "phalcon/incubator": "3.4.*",
    "phalcon/platform": "dev-master"
  },

  "require-dev": {
    "phpstan/phpstan": "0.9.*",
    "squizlabs/php_codesniffer": "3.3.*"
  },

  "suggest": {
    "ext-yaml": "*",
    "ext-intl": "*"
  },

  "autoload": {
    "psr-4": {
      "Phosphorum\\": "modules/",
      "Phosphorum\\Domain\\": "domain/"
    }
  },

  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
